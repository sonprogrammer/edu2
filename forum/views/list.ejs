<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body class="grey-bg">
    <%- include('nav.ejs') %>

    <div class="white-bg">
      <% for(let i = 0; i < posts.length; i++){ %>
      <div class="list-box">
        <a href='/detail/<%= posts[i]._id %>''>
          <h4><%= posts[i].title %></h4>
          <p>글내용임</p>
        </a>
        <a href="/edit/<%= posts[i]._id %>">글 수정</a>
        <span style='cursor: pointer;' class="delete" data-id="<%= posts[i]._id %>">🗑️</span>
      </div>
      <% } %>
    </div>
    <a href="/list/next/<%= posts[posts.length-1]._id %>">next</a>
    <script>
      document.querySelectorAll('.delete').forEach(button => {button.addEventListener('click', (e)=>{
        e.target.dataset.id
        fetch('/delete?docid=' + e.target.dataset.id , {
          method: 'DELETE',
        })
        .then((r) => r.text())
        .then((r) => {console.log(r)})
        .then((r) =>{
          e.target.parentElement.style.display = 'none'
        })
      })
    })
    </script>
  </body>
</html>
